
<label for='name'>Name</label>
<input name='cat[name]' id='name' type='text' value="<%= cat.name %>">
<br>

<label for='birth_date'>Birth Date</label>
<input name='cat[birth_date]' id='birth_date' type='date' value="<%= cat.birth_date %>">
<br>

<label for='color'>Color</label>
<select name='cat[color]'>
  <option selected disabled>Choose the color:</option>
  <option value='Black' <%=cat.color == "Black" ? "Selected" : "" %> >Black</option>
  <option value='White' <%=cat.color == "White" ? "Selected" : "" %> >White</option>
  <option value='Orange' <%=cat.color == "Orange" ? "Selected" : "" %> >Orange</option>
</select>
<br>

<label for='sex'>Sex</label>
<select name='cat[sex]'>
  <option selected disabled>Choose the sex:</option>
  <option value='M' <%=cat.sex == "M" ? "Selected" : "" %> >Male</option>
  <option value='F' <%=cat.sex == "F" ? "Selected" : "" %> >Female</option>
</select>
<br>

<label for='description'>Description</label>
<textarea name='cat[description]' id='description'> <%= cat.description %> </textarea>
<br>

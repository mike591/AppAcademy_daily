<h1> <%= @cat.name %>'s Profile </h1>

<table>
  <tr>
    <th> Attribute </th>
    <th> Value </th>
  </tr>

  <tr>
    <td> Birth Date: </td>
    <td> <%= @cat.birth_date %> </td>
  </tr>

  <tr>
    <td> Color: </td>
    <td> <%= @cat.color %> </td>
  </tr>

  <tr>
    <td> Sex: </td>
    <td> <%= @cat.sex %> </td>
  </tr>

</table>

<table>
  <tr>
    <th> Start Date </th>
    <th> End Date </th>
    <th> Status </th>
  </tr>

  <% @request.each do |request| %>
    <tr>
      <td> <%= request.start_date %> </td>
      <td> <%= request.end_date %> </td>
      <td> <%= request.status %> </td>
      <td> <%= button_to "Approve", cat_rental_request_url(request), method: :patch %> </td>
    </tr>
  <% end %>

</table>



<h3> <%= @cat.description %> </h3>
<%= link_to "Go back", cats_url %>

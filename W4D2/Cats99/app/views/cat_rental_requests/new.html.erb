<h1>Request a Cat</h1>

<form action="/cat_rental_requests" method="post">
  <select name='cat_rental_request[cat_id]'>
    <option selected disabled>Choose a Cat</option>
    <% @cats.each do |cat| %>
      <option value= <%= cat.id %> > <%= cat.name %> </option>
    <% end %>
  </select>

  <input name='cat_rental_request[start_date]' id='start_date' type='date'>
  <input name='cat_rental_request[end_date]' id='end_date' type='date'>


  <input type='Submit' value="Reserve cat for usage">
</form>

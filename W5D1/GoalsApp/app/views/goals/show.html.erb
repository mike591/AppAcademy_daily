<h1>The Show Page</h1>
<%= @goal.title %><br>
<%= @goal.details %><br>
<% if @goal.finished %>
  Finished?: Completed
<% else %>
  Finished?: Ongoing
<% end %><br>

<% if current_user.id == @goal.user_id %>
  <%= button_to "Delete Goal", goal_url, method: :delete %>
<% end %>

<%= button_to (@goal.finished.nil? ? 'Complete' : 'Did not complete') , goal_url(@goal), method: :patch %>
<br><br>

<%= link_to 'Back to User', user_url(@goal.user_id) %>

<h2>New Goal</h2>

<form action="<%= goals_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>Title
    <input type="text" name="goal[title]" value="<%= @goal.title %>">
  </label>

  <label>Details
    <input type="text" name="goal[details]" value="<%= @goal.details %>">
  </label>

  <label>Visibility
    <input type="checkbox" name="goal[visibility]" value="True">
  </label>

  <label>Finished
    <input type="checkbox" name="goal[finished]" value="True">
  </label>

  <input type="submit" value="New Goal">

</form>
